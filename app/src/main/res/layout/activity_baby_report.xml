<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context="com.walidbarakat.newprogrammer.mazraaandroid.BabyReport">

    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f1cc96">

        <EditText
            android:id="@+id/TxtBabyNum"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="رقم المولود"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/edittextstyle"
            android:inputType="numberSigned"
            android:textColorHint="#10100f"
            android:ellipsize="start"
            android:layout_marginEnd="16dp"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="121dp"
            android:gravity="left"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp">

            <RadioButton
                android:id="@+id/RBAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الكل"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/RBMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ذكر"/>

            <RadioButton
                android:id="@+id/RBFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="انثى"/>
        </RadioGroup>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عدد المواليد:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="372dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/TxtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginRight="55dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="405dp"
            android:layout_marginEnd="55dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مـــن:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginRight="135dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="135dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الــى:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="263dp"
            android:layout_marginRight="135dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="135dp"/>

        <ListView
            android:id="@+id/LstView"
            android:layout_width="312dp"
            android:layout_height="175dp"
            android:layout_marginTop="438dp"
            android:background="@drawable/listview_border"
            android:scrollbars="horizontal|vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/BtnPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshap"
            android:text="التاريخ"
            android:onClick="date"
            android:layout_marginRight="135dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="135dp"/>

        <Button
            android:id="@+id/BtnPick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الوقت"
            android:background="@drawable/buttonshap"
            android:onClick="time"
            android:layout_marginRight="135dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="135dp"/>

        <TextView
            android:id="@+id/TxtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:layout_marginRight="235dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="235dp"/>

        <TextView
            android:id="@+id/TxtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:layout_marginRight="235dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="182dp"
            android:layout_marginEnd="235dp"/>

        <Button
            android:id="@+id/BtnPick3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshap"
            android:text="التاريخ"
            android:onClick="date2"
            android:layout_marginRight="135dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="285dp"
            android:layout_marginEnd="135dp"/>

        <Button
            android:id="@+id/BtnPick4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الوقت"
            android:onClick="time2"
            android:layout_marginRight="135dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/buttonshap"
            android:layout_marginTop="342dp"
            android:layout_marginEnd="135dp"/>

        <TextView
            android:id="@+id/TxtDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:layout_marginRight="235dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="296dp"
            android:layout_marginEnd="235dp"/>

        <TextView
            android:id="@+id/TxtTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp"
            android:layout_marginRight="235dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="356dp"
            android:layout_marginEnd="235dp"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context="com.walidbarakat.newprogrammer.mazraaandroid.BabyReport">

    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f1cc96">
    <ImageView
        android:id="@+id/AddReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/insert"
        android:layout_marginRight="199dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="8dp"
        android:text="سبب العزل:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/SpnrEndReason"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edittextstyle"
        android:inputType="text"
        android:textColorHint="#10100f"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/LstView"
        android:layout_width="325dp"
        android:layout_height="300dp"
        android:background="@drawable/listview_border"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="221dp"
        android:layout_marginRight="3dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/BtnPick7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshap"
        android:onClick="date4"
        android:text="التاريخ"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/BtnPick8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshap"
        android:onClick="time4"
        android:text="الوقت"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="147dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/TxtDate4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20dp"
        android:layout_marginTop="99dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="121dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="123dp"/>

    <TextView
        android:id="@+id/TxtTime4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20dp"
        android:layout_marginTop="154dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="123dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="123dp"/>
    </android.support.constraint.ConstraintLayout>

</ScrollView>